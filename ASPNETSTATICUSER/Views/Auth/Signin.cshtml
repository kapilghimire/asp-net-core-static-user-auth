
@{
    ViewData["Title"] = "Login Form";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var returnUrl = @Context.Request.Query["returnurl"];
}
@model ASPNETSTATICUSER.Models.SignInModel
<div class="login-form">
    <form asp-controller="auth" asp-action="signin" asp-route-returnurl="@returnUrl" method="post" enctype="multipart/form-data">
        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Username, new { @id = "userName", @class = "form-control", placeholder = "Username", @name = "username" })
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @id = "password", @class = "form-control", placeholder = "Password", @name = "password" })
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
        </div>
    </form>
    <p class="text-center"><a href="#">Create an Account</a></p>
</div>

